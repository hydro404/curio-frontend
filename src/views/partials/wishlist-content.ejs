<!-- Content  -->
<section class="col-lg-8">
  <!-- Toolbar-->
  <div
    class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-3"
  >
    <h6 class="fs-base text-light mb-0">
      List of items you added to wishlist:
    </h6>
    <a class="btn btn-primary btn-sm" href="/account-login"
      ><i class="ci-sign-out me-2"></i>Sign out</a
    >
  </div>
  <!-- Wishlist-->
  <!-- Item-->
  <% wishlist.forEach(function(wishlistItem) { %>
  <div
    class="d-sm-flex justify-content-between mt-lg-4 mb-4 pb-3 pb-sm-2 border-bottom"
  >
    <div class="d-block d-sm-flex align-items-start text-center text-sm-start">
      <a
        class="d-block flex-shrink-0 mx-auto me-sm-4"
        href="/product?id=<%= wishlistItem.id %>"
        style="width: 10rem"
        ><img
          src="img/<%- wishlistItem.image[0]%>"
          alt="<%- wishlistItem.name%>"
      /></a>
      <div class="pt-2">
        <h3 class="product-title fs-base mb-2">
          <a href="/product?id=<%= wishlistItem.id %>"
            ><%- wishlistItem.name%></a
          >
        </h3>
        <div class="fs-sm">
          <span class="text-muted me-2">Category:</span><%-
          wishlistItem.category%>
        </div>
        <div class="fs-sm">
          <span class="text-muted me-2">Size:</span><%- wishlistItem.size%>
        </div>

        <div class="fs-lg text-accent pt-2">
          &#8369;<%- wishlistItem.price%>
        </div>
      </div>
    </div>
    <div class="pt-2 ps-sm-3 mx-auto mx-sm-0 text-center">
      <button class="btn btn-outline-danger btn-sm" type="button">
        <i class="ci-trash me-2"></i>Remove
      </button>
    </div>
  </div>
  <% }); %>
</section>
